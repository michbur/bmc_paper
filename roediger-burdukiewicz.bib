	note = {{PMID:} 23841653 
{PMCID:} {PMC3762066}},
	keywords = {{DNA}, Fluorescence, Linear Models, Real-Time Polymerase 
Chain Reaction},
	pages = {703--711}
}


@article{zhao_2005,
